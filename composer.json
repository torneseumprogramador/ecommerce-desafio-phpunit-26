{
    "name": "danilo/ecommerce-desafio",
    "description": "Aprendendo o Framework Slim",
    "license": "Free",
    "autoload": {
        "psr-4": {
            "Danilo\\EcommerceDesafio\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Steps\\": "features/Steps/"
        }
    },
    "authors": [
        {
            "name": "Danilo Aparecido dos Santos",
            "email": "didox_59@yahoo.com.br"
        }
    ],
    "scripts": {
        "start": "php -S localhost:8080 src/index.php",
        "test": "phpunit",
        "test-comportamento": "vendor/bin/behat"
    },
    "config": {
        "process-timeout": 1200
    },
    "require": {
        "slim/slim": "^4.0",
        "slim/psr7": "^1.6",
        "slim/php-view": "^3.2",
        "illuminate/database": "^10.28"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.4",
        "behat/behat": "^3.13",
        "behat/mink-extension": "^2.3",
        "behat/mink-selenium2-driver": "^1.6"
    }
}
